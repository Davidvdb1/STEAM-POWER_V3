# 1) Builder: install deps (and run any lint/build if you add one)
FROM node:18-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci
COPY . .
 
# 2) Runtime: only prod deps + source
FROM node:18-alpine
WORKDIR /app
COPY --from=builder /app/package*.json ./
RUN npm ci --omit=dev
COPY --from=builder /app/src ./src
 
EXPOSE 3000
CMD ["node", "src/server.js"]
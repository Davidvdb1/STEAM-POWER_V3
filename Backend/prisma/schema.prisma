generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id          String  @id @default(uuid())
    username    String  @unique
    email       String  @unique
    password    String
    role        Role
}

enum Role {
    ADMIN
    TEACHER
}

model Group {
    id          String  @id @default(uuid())
    name        String  @unique
    code        String  @unique @default(dbgenerated("substring(md5(random()::text), 1, 6)"))
}

model Camp {
    id          String  @id @default(uuid())
    workshops   Workshop[]
    name        String
    startDate   DateTime
    endDate     DateTime
    address     String
    startTime   String
    endTime     String
    minAge      Int
    maxAge      Int
    picture     String
    archived    Boolean
}

model Workshop {
    id          String  @id @default(uuid())
    camps       Camp[]
    name        String
    markdown    String
}

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id          String  @id @default(uuid())
    username    String  @unique
    email       String  @unique
    password    String
    role        Role
}

enum Role {
    ADMIN
    TEACHER
}

model Camp {
    id          String  @id @default(uuid())
    workshops   Workshop[]
    name        String
    startDate   DateTime
    endDate     DateTime
    address     String
    startTime   String
    endTime     String
    minAge      Int
    maxAge      Int
    picture     String
    archived    Boolean @default(false)
}

model Workshop {
    id          String  @id @default(uuid())
    camp        Camp?    @relation(fields: [campId], references: [id])
    campId      String?
    title       String
    html        String
    position    Int
    archived    Boolean @default(false)
}

model Group {
    id          String  @id @default(uuid())
    name        String  @unique
    code        String  @unique @default(dbgenerated("substring(md5(random()::text), 1, 6)"))
    energyData  EnergyData[]
}

model EnergyData {
    id          String  @id @default(uuid())
    pin         Int     @default(0)
    group       Group   @relation(fields: [groupId], references: [id])
    groupId     String
    time        DateTime    @default(now())
    value       Int
    type        EnergyType
}

enum EnergyType {
    SOLAR
    WATER
    WIND
}

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id          String  @id @default(uuid())
    username    String
    email       String  @unique
    password    String
}

model Kamp {
    id          String  @id @default(uuid())
    workshops   Workshop[]
    naam        String
    startdatum  DateTime
    einddatum   DateTime
    adres       String
    starttijd   String
    eindtijd    String
    minLeeftijd Int
    maxLeeftijd Int
    foto        String
    gearchiveerd    Boolean
}

model Workshop {
    id          String  @id @default(uuid())
    kampen      Kamp[]
    naam        String
    markdown    String
}
